# Arbion Trading Platform - Environment Variables Template
# Copy this file to .env and configure with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/arbion_production

# Flask Configuration
SESSION_SECRET=your-very-secure-random-session-secret-key-here
FLASK_ENV=production

# Schwab API Configuration
SCHWAB_API_KEY=your-schwab-oauth-client-id
SCHWAB_API_SECRET=your-schwab-oauth-client-secret

# Optional: OpenAI API for AI Features
OPENAI_API_KEY=your-openai-api-key

# Optional: Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com

# Security Settings
WTF_CSRF_TIME_LIMIT=3600
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
